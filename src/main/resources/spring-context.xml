<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:util="http://www.springframework.org/schema/util"	
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/beans/spring-context-3.1.xsd
		http://www.springframework.org/schema/util http://www.springframework.org/schema/beans/spring-util-3.1.xsd">

	<bean name="awsS3Client" class="com.amazonaws.services.s3.AmazonS3Client">
		<constructor-arg index="0">
			<bean class="com.amazonaws.auth.BasicAWSCredentials">
				<constructor-arg index="0" value="AKIAIGBN2TCGAEZF6UAQ" />
				<constructor-arg index="1" value="c/THVw9PCgf4dmqLmVBBXzGx0aoyMWVPdxpKd5/3" />
			</bean>
		</constructor-arg>
	</bean>

	<bean name="awsDynamoDbClient" class="com.amazonaws.services.dynamodb.AmazonDynamoDBAsyncClient">
		<constructor-arg index="0">
			<bean class="com.amazonaws.auth.BasicAWSCredentials">
				<constructor-arg index="0" value="AKIAIGBN2TCGAEZF6UAQ" />
				<constructor-arg index="1" value="c/THVw9PCgf4dmqLmVBBXzGx0aoyMWVPdxpKd5/3" />
			</bean>
		</constructor-arg>
	</bean>

	<bean id="hotelDetailDAO" class="com.burda.scraper.dao.HotelDetailDAO">
		<property name="dynamoDBClient" ref="awsDynamoDbClient" />
	</bean>
	
	<bean id="masterHotelDAO" class="com.burda.scraper.dao.MasterHotelDAO">
		<property name="dynamoDBClient" ref="awsDynamoDbClient" />
	</bean>

	<bean id="sourceHotelDAO" class="com.burda.scraper.dao.SourceHotelDAO">
			<property name="dynamoDBClient" ref="awsDynamoDbClient" />	
	</bean>
	
	<bean id="frenchQtrGuideCacheLoader" class="com.burda.scraper.cache.FrenchQuarterGuideCacheLoader" >
		<property name="hotelDetailDAO" ref="hotelDetailDAO" />
		<property name="sourceHotelDAO" ref="sourceHotelDAO" />
	</bean>
	
	<bean id="frenchQtrGuideOneTimeLoader" class="com.burda.scraper.cache.OneTimeHotelLoader">
		<property name="masterHotelDAO" ref="masterHotelDAO" />
		<property name="hotelDetailDAO" ref="hotelDetailDAO" />
		<property name="sourceHotelDAO" ref="sourceHotelDAO" />	
	</bean>
		
	<bean id="frenchQtrGuideInvSource" class="com.burda.scraper.inventory.FrenchQuarterGuideInventorySource">
		<property name="hotelDetailDAO" ref="hotelDetailDAO" />
		<property name="sourceHotelDAO" ref="sourceHotelDAO" />		
	</bean>	
		
	<bean id="nodcInvSource" class="com.burda.scraper.inventory.NODCInventorySource">
		<property name="sourceHotelDAO" ref="sourceHotelDAO" />
		<property name="hotelDetailDAO" ref="hotelDetailDAO" />
	</bean>	
	
	<bean id="nodchotelLoader" class="com.burda.scraper.cache.NODCHotelLoader" />
		
	<bean id="inventoryService" class="com.burda.scraper.inventory.InventoryServiceImpl">
		<property name="NODCInventorySource" ref="nodcInvSource" />
		<property name="FQGInventorySource" ref="frenchQtrGuideInvSource" />
	</bean>
</beans>